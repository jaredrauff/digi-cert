{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["react", "react-dom", "node", "svg-sprite-loader"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tailwind.config.ts", "declarations.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
